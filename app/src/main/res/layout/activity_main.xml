<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/calc_display"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#BFC0C0"
        android:gravity="end|center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0.0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:typeface="monospace"
        app:fontFamily="sans-serif-light" />

    <LinearLayout
        android:id="@+id/functions_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#B4B4B4"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingLeft="2dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">


            <TableRow android:paddingLeft="5dp">

                <Button
                    android:id="@+id/square_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="x ^ 2"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/power_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="x ^ y"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/log_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/sine_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/cosine_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow android:paddingLeft="5dp">

                <Button
                    android:id="@+id/square_root_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="\u221a"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/power_of_e_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="e ^ x"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/ln_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"

                    />

                <Button
                    android:id="@+id/tan_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"

                    />

                <Button
                    android:id="@+id/cot_btn"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/oval_btn"
                    android:text="cot"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keys_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BFC0C0"
        android:orientation="vertical"
        android:paddingLeft="3dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_gravity="center">
            
            <TableRow>
                <Button
                    android:id="@+id/c_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="C"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/sign_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="+/-"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/percent_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="%"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/del_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="DEL"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/seven_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="7"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/eight_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="8"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/nine_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="9"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/division_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="/"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/four_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="4"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/five_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="5"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/six_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="6"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/multiply_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="x"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    android:textAllCaps="false"
                    />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/one_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="1"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/two_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="2"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/three_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="3"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/subtraction_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="-"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/zero_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/dot_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="."
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/equal_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="="
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/addition_btn"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:text="+"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_rectangle_btn"
                    app:fontFamily="sans-serif-light"
                    android:layout_margin="3dp"
                    />
            </TableRow>
            
        </TableLayout>

    </LinearLayout>
</LinearLayout>